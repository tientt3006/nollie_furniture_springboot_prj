			<plugin>
				<groupId>com.diffplug.spotless</groupId>
				<artifactId>spotless-maven-plugin</artifactId>
				<version>${spotless.version}</version>
				<configuration>
<!--					 Định nghĩa các quy tắc định dạng cho các file Java.-->
					<java>
<!--						Tự động xóa các import không sử dụng.-->
						<removeUnusedImports />
<!--						 Hỗ trợ các comment đặc biệt để tắt/bật định dạng Spotless trong một phần của file-->
						<toggleOffOn/>
						<trimTrailingWhitespace/>
						<endWithNewline/>
						<indent>
							<tabs>true</tabs>
							<spacesPerTab>4</spacesPerTab>
						</indent>
<!--						 Sử dụng code formatter Palantir Java Format để định dạng code Java.-->
						<palantirJavaFormat/>
<!--						Sắp xếp thứ tự các câu lệnh import.-->
						<importOrder>
							<!-- Chỉ định thứ tự import. -->
							<order>java,jakarta,org,com,com.diffplug,</order>
						</importOrder>
					</java>
